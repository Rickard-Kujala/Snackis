@page
@model ForumViewModel
@{
    ViewData["Title"] = "Home page";
}
@if (Model.AllPosts != null)
{
    <div class="container ">
        <div class="row">
            <div class="col-9 bg-white p-1">
                <table style="width:inherit">
                    <thead>
                        <tr class="card text-white p-2" style="background-color: brown">
                            <td>
                                <h4 class="text-center" style="font-family:'Segoe UI Historic'">Välkommen till @Model.Forum-Snack</h4>
                            </td>
                        </tr>
                    </thead>
                </table>
                <table style="width:inherit">
                    <thead>
                        <tr class="card text-white bg-light">
                            <td>
                                <div class="card text-white bg-dark">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">Välj en kategori Kategori</h5>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @foreach (var post in Model.Categories)
                                {
                                    <div class="card mb-1 ">
                                        <div class="card-body p-2  @*row*@">
                                            <div class="row">
                                                <a class="col-6 text-dark" href="?category=@post"><h5 class="card-title col-6">@post</h5></a>
                                                <h5 class="card-title col-4">@Model.AllPosts.Where(p => p.Category == post && p.Title != null).Count() Trådar</h5>
                                                <h5 class="card-title col-2">@Model.AllPosts.Where(p => p.Category == post).Where(p => p.PostParent != null).Count() Inlägg</h5>
                                            </div>
                                        </div>
                                    </div>
                                    @*<div class="card mb-1">
                                        <div class="card-body p-2 p-sm-3">
                                            <div class="con">
                                                <a class="col-6 text-dark" href="?category=@post"><h5 class="card-title col-6">@post</h5></a>
                                                <h5 class="card-title col-4">@Model.AllPosts.Where(p => p.Category == post && p.Title != null).Count() Trådar</h5>
                                                <h5 class="card-title col-2">@Model.AllPosts.Where(p => p.Category == post).Where(p => p.PostParent != null).Count() Inlägg</h5>
                                            </div>
                                        </div>
                                    </div>*@
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-2 card ml-1 overflow-auto text-center" style="min-height:75vh; max-height:75vh">
                <h4 class="text-center mt-3">Kategorier i @Model.Forum</h4>
                <hr />
                @foreach (var category in Model.Categories)
	            {
                    <a href="">@category</a><br />
		 
	            }
            </div>
        </div>
        <!-- New Thread Modal -->
        <div class="modal fade" id="threadModal" tabindex="-1" role="dialog" aria-labelledby="threadModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <form>
                        <div class="modal-header d-flex align-items-center bg-primary text-white">
                            <h6 class="modal-title mb-0" id="threadModalLabel">New Discussion</h6>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="threadTitle">Title</label>
                                <input type="text" class="form-control" id="threadTitle" placeholder="Enter title" autofocus="" />
                            </div>
                            <textarea class="form-control summernote" style="display: none;"></textarea>

                            <div class="custom-file form-control-sm mt-3" style="max-width: 300px;">
                                <input type="file" class="custom-file-input" id="customFile" multiple="" />
                                <label class="custom-file-label" for="customFile">Attachment</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary">Post</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

}



